package com;

import java.util.Scanner;

public class practice {
    public static void main(String[] args) {
        System.out.print("Enter number of elements in array ");
        Scanner inp = new Scanner(System.in);

        int n = inp.nextInt(); // number of elements in array to be stored
        int[] array = new int[n]; // declaration of array

        // 1st for loop (inserting elements in array)
        System.out.println("Insert elements:");
        for (int i = 0; i < n; i++) {
            array[i]= inp.nextInt();
        }

        // 2nd for loop (Sum of all elements in array)
        int sum = 0;
        for (int i = 0; i < n; i++) {
            sum = sum + array[i];
        }
        System.out.print("The sum of all elements: "+ sum);
    }
}
