package com;

import java.util.Scanner;

public class practice {
    public static void main(String[] args) {
        System.out.println("Enter number of elements in array ");
        Scanner inp = new Scanner(System.in);
        
        int n = inp.nextInt(); // number of elements in array to be stored
        int[] array = new int[n]; // declaration of array
        
        // 1st for loop (inserting elements in array)
        for (int i = 0; i < n; i++) {
            System.out.println("Enter " + i + "th element: ");
            array[i]= inp.nextInt();
        }
        
        // 2nd for loop (displaying array)
        System.out.println("The elements are: ");
        for (int i = 0; i < n; i++) {
            System.out.print(array[i] + ", "); // in single line separated by ','
        }
    }
}
